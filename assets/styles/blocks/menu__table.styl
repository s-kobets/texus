.menu__table__dropdown
	width 100%
	left 0


.menu__table
	display none
	font-size 25px
	line_height 36px
	text-align center
	color #fff
	background-color #232f3e
	.col-xs-2
		@media (max-width 479px)
			width 25%
	.col-xs-4
		@media (max-width 479px)
			display none
	
	.glyphicon
		top 20px
		color #fff
		
	a.area-link:hover
		.glyphicon
			color #232f3e
		background-color #fff
		
	a.area-link-menu:hover
		.glyphicon
			color #fff
		background-color #009ade
			
	.col-xs-2 
		position relative
		margin-top 25px
		padding 32px 0
		height 95px
		font-size 35px
	/*кнопка корзины на mobile*/
	.mobile__basket	
		position relative
		margin-top 25px
		padding 32px 0
		height 95px
		z-index 205	
		
		a
			margin-top 20px
			margin-left 10px
			height 36px
			width 42px
			background url('../images/basket.png') no-repeat 0 0

		&:hover,
		&:focus,
		&:active,
		&:visited
			background-color #fff
			a
				background-position 0 -36px

		span
			position absolute
			top 10px
			left 27px
			font 20px/28px 'AFuturicaExtraBold'
			color #c3f15d
	@media (max-width 601px)		
		display block
		
.table__button
	z-index 205
	
	&:hover,
	&:focus,
	&:active,
	&:visited
		background-color #fff		
/*свойства окна для телефонов*/
.modal-content
	border none
.modal-dialog
	position absolute
	top 119px
	left 0
	padding 0
	width 100%
	
	.modal-body
		padding 15px 0 5px 15px
		background-color #fff
		text-align left
		
		p.not__found
			margin 50px
			font 14px/30px Tahoma, Arial, Verdana, Geneva CY, sans-serif
			color #72787a
				
				@media (max-width 482px)
					display none
				span#text__search
					margin 0 5px
					line_height 24px
					color #2b2a28	
					
	ul
		& li
			margin 17px 30px 20px 0
						
			&:nth-child(3)
				margin-right 22px
			&:last-child
				margin-right 0
			& p
				color #000
				font 14px/24px Tahoma, Arial, Verdana, Geneva CY, sans-serif

				& span.glyphicon
					margin-right 10px
				
				&.icon-velcome
					display inline-block
					padding-left 28px
					background url('../images/velcom_black.png') no-repeat left center
				&.icon-mts
					display inline-block
					padding-left 25px
					background url('../images/mts_black.png') no-repeat left center
	
		
			.p_smal
				font-size 12px
				color #b0b6b9
