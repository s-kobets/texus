/*навигация под ipad*/
@media (min-width 992px) and (max-width 1025px)
	.menu__product .col-md-3
		width 24%
		
	.menu__product .col-md-9
		width 76%				
.menu__product
	position relative
	margin 20px 0
	background-color #f1f1f1
	

	.navbar
		//height 680px
		position static
		background-color #01a0e4
		//overflow hidden
		/*
		@media (max-width 800px)
			height auto
		@media (max-width 485px)
			height 680px*/
	@media (max-width 482px)		
		.col-md-9
			display none

	.carousel-inner
		position relative

	.carousel-caption
		position absolute
		top 47px
		left 80px
		width 320px
		text-align left
		text-shadow none
		
		@media (max-width 1025px)
			top 15px

		h2
			font 28px/40px 'AFuturicaExtraBold'
			color #232f3e

			&.line_height
				line_height 48px

			&.carousel-caption__price
				display inline-block
				margin-top 28px
				padding-left 20px
				padding-right 30px
				color #fff
				background url('../images/carousel-caption__price.png') no-repeat -2px center
				background-size 100% 100%
		h4
			font 20px/30px 'AFuturica'
			color #232f3e

			&.line_height
				line_height 40px
	.carousel-inner		
		img
			width 100%
			height auto
	a.left.carousel-control,
	a.right.carousel-control
		width 56px
		height 68px
		top 50%
		margin-top -34px
		background url('../images/carousel_left.png') no-repeat

	a.right.carousel-control
		background url('../images/carousel_right.png') no-repeat

	.slider__icon
		margin-top 20px

		& li
			margin-left 7px

			&:first-child
				margin-left 0

		&__windows,
		&__intel,
		&__3g,
		&__ram
			width 72px
			height 51px
			background url('../images/windows.png') no-repeat
		&__intel
			background url('../images/intel.png') no-repeat
		&__3g
			background url('../images/3g.png') no-repeat
		&__ram
			background url('../images/ram.png') no-repeat
	
	
	& .menu__slider_bottom
		& .menu__shipping,
		& .menu__presence,
		& .menu__certificate
			padding 25px 107px 25px 20px
			background #fff url('../images/menu_shipping.png') no-repeat 210px center 
			
			@media (max-width 1025px) and (min-width 850px)
				background-position 140px center
			
			& h5
				margin-bottom 10px
				font 14px/20px Tahoma, Arial, Verdana, Geneva CY, sans-serif
				font-weight bold
				color #2b2a28
				
			& p
				font 14px/20px Tahoma, Arial, Verdana, Geneva CY, sans-serif
				color #8b9294

			&:hover
				box-shadow 1px 1px 5px rgba(0,0,0,.3)
				background-position 180px center
				
				@media (max-width 1025px) and (min-width 850px)
					background-position 120px center
				
		& .menu__presence
			border-left 1px solid #f1f1f1
			background #fff url('../images/menu_presence.png') no-repeat 200px center
			
			@media (max-width 1025px) and (min-width 850px)
				background-position 140px center
			
		& .menu__certificate
			border-left 1px solid #f1f1f1
			padding-right 115px
			background #fff url('../images/menu_sertificate.jpg') no-repeat 200px center
			
			@media (max-width 1025px) and (min-width 850px)
				background-position 140px center
			
		
		@media (max-width 1010px)
			.menu__certificate
				display none