 .wrapper 
	margin 0 auto
	width 1240px
	padding 0 20px
	background-color #f0f0f0
	min-height 100%
	height auto !important
	height 100%
	
	@media (max-width: 1239px)
		width 100%
		
	@media (max-width: 482px)
		padding 0

	@media (min-width: 992px)
		.container
			width 100%
	.menu__top		
		padding 4px 0
		text-align center
		
		//width 720px
		ul.nav
			display inline-block
			margin 0 auto
			float none
			text-align center
			
			
	
			& li a
				padding 7px 20px			
				font 14px/24px Tahoma, Arial, Verdana, Geneva CY, sans-serif
				color #2b2a28

				&:hover
					background-color #01a0e4
					color #fff

				b.caret
					margin-left 7px
					border none
					
					&.glyphicon
						font-size 8px
						top -4px

			.dropdown-menu 
				top auto
				left auto
				
				li a
					background-color #01a0e4
					color #fff

				&:focus,
				&:hover
					background-color #4ebdec

nav.menu__top li.open a:focus
	color #fff
	background-color #01a0e4

@media (min-width 760px)
	.nav > li
		float left
@media (max-width 759px)
	.menu__top
		display none

	


.menu__search
	position relative
	width 100%
	height 124px
	background-color #232f3e

	@media (max-width 478px)		
		height 190px

	@media (min-width 479px) and (max-width 485px)		
		height 120px
	/*Логотип на больших размерах*/
	.col-md-3
		text-align center

		@media (min-width 479px) and (max-width 601px)		
			display none

		@media (max-width 478px)
			width 100%

	
	a.logo__hover		
		display none
		height 95px		
		background url('../images/logo_hover.png') no-repeat center top	
		
	a.logo	
		display block
		//padding-top 142px
		//margin-top 15px
		height 85px
		margin-top 15px
		font 32px/32px Arial
		font-weight bold
		text-decoration none
		text-transform uppercase
		letter-spacing .01em
		text-align center
		color #fff
		background url('../images/logo_texus.png') no-repeat center 62px
		
		p.hover 
			display none
			padding-top 20px
			font 14px/24px Tahoma, Arial, Verdana, Geneva CY, sans-serif
			text-decoration none
			text-transform uppercase
			letter-spacing .01em
			text-align center
			color #232f3e

		&:hover
			p
				display none
			p.hover 
				display block
			background url('../images/logo_hover.png') no-repeat center top	


	ul.menu__phone
		@media (max-width 482px)		
			display none
		& li

			margin 17px 30px 20px 0
						
			&:nth-child(3)
				margin-right 22px
			&:last-child
				margin-right 0
			& p
				color #fff
				font 14px/24px Tahoma, Arial, Verdana, Geneva CY, sans-serif

				& span.glyphicon
					margin-right 10px
				
				&.icon-velcome
					display inline-block
					padding-left 28px
					background url('../images/velcome_logo.png') no-repeat left center
				&.icon-mts
					display inline-block
					padding-left 25px
					background url('../images/mts_logo.png') no-repeat left center
	
		
			.p_smal
				font-size 12px
				color #b0b6b9
				
				@media (max-width 820px)
					display none
			

	& form
		display inline-block
		width 77%
		margin-left 0
		
		@media (max-width 759px)
			width 60%

		& .form-group
			margin-right 56px
			width 100%
			position relative

			& input 
				width 100%
				height 39px
				background-color #fff
				box-shadow inset 2px 2px 5px rgba(0,0,0,.3)

			& #submit__search
				position absolute
				top 0
				right 0
				width 56px
				height 100%
				background url('../images/form_submit.png') no-repeat center center
	
				&:focus
					width 100%
					background-color #fff
					//z-index 2000

			& #submit__search__close
				display none
				position absolute
				top 2
				right 70px
				font-size 18px
				line-height 36px
				color #01a0e4
				z-index 2000
	/*меню поиска телефоны и search*/
	.col-md-9
		@media (max-width 601px) //479		
			display none

	.basket_icon
		display inline-block
		position relative
		height 35px
		margin-left 42px
		padding-left 42px
		background url('../images/basket.png') no-repeat left bottom
		font 20px/24px 'AFuturica'
		color #c3f15d
		font-weight bolt				

		span
			position absolute
			top -5px
			left 12px
			font-family 'AFuturicaExtraBold'
			line_height 30px

		b.glyphicon
			top -2px
			margin-left 7px
			font-size 8px
			line_height 24px

		@media (max-width 479px)		
			display none
	
	.menu__mobile
		position absolute
		bottom 0
		left 0
		display none
		font-size 25px
		line_height 36px
		text-align center
		color #fff
		
		.col-xs-3 
			padding-top 35px
			padding-bottom 20px
			font-size 35px

		.mobile__basket	
			position relative		
			height 85px
			background url('../images/basket.png') no-repeat center 40px
		
		span
			position absolute
			top 28px
			left 35px
			font 20px/28px 'AFuturicaExtraBold'
			color #c3f15d
		
		@media (max-width 478px)		
			display block

	.menu__table
		display none
		font-size 25px
		line_height 36px
		text-align center
		color #fff
		
		.col-xs-2 
			padding-top 45px
			padding-bottom 20px
			font-size 35px

		.mobile__basket	
			position relative		
			height 85px
			background url('../images/basket.png') no-repeat center 50px
		
		span
			position absolute
			top 37px
			left 35px
			font 20px/28px 'AFuturicaExtraBold'
			color #c3f15d
		@media (min-width 479px) and (max-width 601px)		
			display block
#modal-sidebar-two
	/*окно поиска*/
	.modal-dialog
		position absolute
		top 0
		left 0
		padding 0 20px
		width 100%
		
		.modal-body
			background-color #fff
			
			p.not__found
				margin 50px 50px 40px 240px
				font 14px/30px Tahoma, Arial, Verdana, Geneva CY, sans-serif
				color #72787a
				
				span#text__search
					margin 0 5px
					line_height 24px
					color #2b2a28
				
.menu__product
	position relative
	margin 20px 0
	//height 645px
	background-color #f1f1f1
	//overflow hidden

	.navbar
		//height 680px
		position static
		background-color #01a0e4
		//overflow hidden
		/*
		@media (max-width 800px)
			height auto
		@media (max-width 485px)
			height 680px*/
	@media (max-width 482px)		
		.col-md-9
			display none

	.carousel-inner
		position relative

	.carousel-caption
		position absolute
		top 47px
		left 80px
		text-align left
		text-shadow none

		h2
			font 28px/40px 'AFuturicaExtraBold'
			color #232f3e

			&.line_height
				line_height 48px

			&.carousel-caption__price
				display inline-block
				margin-top 28px
				padding-left 20px
				padding-right 30px
				color #fff
				background url('../images/carousel-caption__price.png') no-repeat -2px center
				background-size 100% 100%
		h4
			font 20px/30px 'AFuturica'
			color #232f3e

			&.line_height
				line_height 40px
	.carousel-inner		
		img
			width 100%
			height auto
	a.left.carousel-control,
	a.right.carousel-control
		width 56px
		height 68px
		top 50%
		margin-top -34px
		background url('../images/carousel_left.png') no-repeat

	a.right.carousel-control
		background url('../images/carousel_right.png') no-repeat

	.slider__icon
		margin-top 20px

		& li
			margin-left 7px

			&:first-child
				margin-left 0

		&__windows,
		&__intel,
		&__3g,
		&__ram
			width 72px
			height 51px
			background url('../images/windows.png') no-repeat
		&__intel
			background url('../images/intel.png') no-repeat
		&__3g
			background url('../images/3g.png') no-repeat
		&__ram
			background url('../images/ram.png') no-repeat

	& .menu__slider_bottom
		& .menu__shipping,
		& .menu__presence,
		& .menu__certificate
			padding 25px 87px 25px 20px
			background #fff url('../images/menu_shipping.png') no-repeat 210px center 

			& h5
				margin-bottom 10px
				font 14px/20px Tahoma, Arial, Verdana, Geneva CY, sans-serif
				font-weight bold
				color #2b2a28
				
			& p
				font 14px/20px Tahoma, Arial, Verdana, Geneva CY, sans-serif
				color #8b9294

			&:hover
				box-shadow 1px 1px 5px rgba(0,0,0,.3)
				background-position 180px center
		& .menu__presence
			border-left 1px solid #f1f1f1
			background #fff url('../images/menu_presence.png') no-repeat 200px center

		& .menu__certificate
			border-left 1px solid #f1f1f1
			padding-right 115px
			background #fff url('../images/menu_sertificate.jpg') no-repeat 200px center

		@media (max-width 1010px)
			.menu__certificate
				display none