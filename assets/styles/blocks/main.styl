body
	font-family Arial, Verdana, Geneva CY, sans-serif
	transition all 0.3s linear
	background-color #f0f0f0

.modal.fade.in
	z-index 200
.modal-backdrop
	z-index 199	

a.area-link
	position absolute
	top 0
	left 0
	bottom 0
	height 100%
	width 100%	
 .wrapper 
	margin 0 auto
	width 1240px
	padding 0 20px
	background-color #f0f0f0
	min-height 100%
	height auto !important
	height 100%
	
	@media (max-width: 1239px)
		width 100%
		
	@media (max-width: 482px)
		padding 0

	@media (min-width: 992px)
		.container
			width 100%
	.menu__top		
		padding 4px 0
		text-align center
		
		//width 720px
		ul.nav
			display inline-block
			margin 0 auto
			float none
			text-align center
			
			
	
			& li a
				padding 7px 20px			
				font 14px/24px Tahoma, Arial, Verdana, Geneva CY, sans-serif
				color #2b2a28

				&:hover
					background-color #01a0e4
					color #fff

				b.caret
					margin-left 7px
					border none
					
					&.glyphicon
						font-size 8px
						top -4px

			.dropdown-menu 
				top auto
				left auto
				
				li a
					background-color #01a0e4
					color #fff

					&:focus,
					&:hover
						background-color #4ebdec

nav.menu__top li.open a:focus
	color #fff
	background-color #01a0e4

@media (min-width 760px)
	.nav > li
		float left
/*@media (max-width 759px)
	.menu__top
		display none*/

	


.menu__search
	position relative
	width 100%
	height 124px
	background-color #232f3e

	@media (max-width 478px)		
		height 190px

	@media (min-width 479px) and (max-width 485px)		
		height 120px
	/*Логотип на больших размерах*/
	.col-md-3
		text-align center

		@media (min-width 479px) and (max-width 601px)		
			display none

		@media (max-width 478px)
			width 100%

	
	a.logo__hover		
		display none
		height 95px		
		background url('../images/logo_hover.png') no-repeat center top	
		
	a.logo	
		display block
		//padding-top 142px
		//margin-top 15px
		height 85px
		margin-top 25px
		font 26px/26px 'AFuturica' Arial
		font-weight bold
		text-decoration none
		text-transform uppercase
		letter-spacing .1em
		text-align center
		color #fff
		background url('../images/logo_texus.png') no-repeat center 62px
		
		p.hover 
			display none
			padding-top 20px
			font 14px/24px Tahoma, Arial, Verdana, Geneva CY, sans-serif
			text-decoration none
			text-transform uppercase
			letter-spacing .01em
			text-align center
			color #232f3e

		&:hover
			p
				display none
			p.hover 
				display block
			background url('../images/logo_hover.png') no-repeat center top	


	ul.menu__phone
		@media (max-width 482px)		
			display none
		& li

			margin 17px 30px 20px 0
						
			&:nth-child(3)
				margin-right 22px
			&:last-child
				margin-right 0
			& p
				color #fff
				font 14px/24px Tahoma, Arial, Verdana, Geneva CY, sans-serif

				& span.glyphicon
					margin-right 10px
				
				&.icon-velcome
					display inline-block
					padding-left 28px
					background url('../images/velcome_logo.png') no-repeat left center
				&.icon-mts
					display inline-block
					padding-left 25px
					background url('../images/mts_logo.png') no-repeat left center
	
		
			.p_smal
				font-size 12px
				color #b0b6b9
				
				@media (max-width 820px)
					display none
			

	& form
		display inline-block
		width 74%
		margin-left 0
		
		@media (max-width 1010px)
			width 60%
			
		@media (max-width 482px)
			margin 0 auto
		/*модальное окно телефона*/
		&.form__call
			width 100%

		& .form-group
			margin-right 56px
			width 100%
			position relative
			z-index 202

			& input 
				width 100%
				height 39px
				background-color #fff
				box-shadow inset 2px 2px 5px rgba(0,0,0,.3)

			& #submit__search
				position absolute
				top 0
				right 0
				width 56px
				height 100%
				background url('../images/form_submit.png') no-repeat center center
	
				&:focus
					width 100%
					background-color #fff
					//z-index 2000

			& #submit__search__close
				display none
				position absolute
				top 2
				right 70px
				font-size 18px
				line-height 36px
				color #01a0e4
				z-index 2000
	/*меню поиска телефоны и search*/
	.col-md-9
		@media (max-width 601px) //479		
			display none

	.basket_icon
		display inline-block
		position relative
		height 35px
		margin-left 40px
		padding-left 55px
		background url('../images/basket.png') no-repeat 0 0
		font 20px/24px 'AFuturica'
		color #c3f15d
		font-weight bolt				
		
		span
			position absolute
			top -7px
			left 17px
			font-family 'AFuturicaExtraBold'
			line_height 30px
			vertical-align middle

		b.glyphicon
			top 0
			margin-left 7px
			font-size 8px
			line-height 24px

			&.glyphicon-remove
				font-size 18px
				top 5px

		@media (max-width 479px)		
			display none
