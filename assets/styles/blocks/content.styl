.sliderA
	display none
	position relative
	width 100%
	height 500px
	border 1px solid #e8e8e8	
	text-align center
	background-color #fff

	@media (max-width 482px)		
		display block

	& > input 
		display none

		&:checked + label
			background: rgba(1, 160, 228, 0.8);
			
			& + .slide
				visibility: visible;
				opacity: 1;
				transition: opacity 0.8s ease-out 0.1s, visibility 0.1s ease-out 0s;
				
				& + label
					display: block;
					position: absolute;
					top: 0px;
					left: 0px;
					right: 0px;
					bottom: 0px;
					z-index: 50;

		& + label
			position relative
			display inline-block
			margin-top 450px
			margin-right 4px
			width 10px
			height 10px
			border-radius 8px
			background rgba(90, 90, 90, 0.4);
			cursor pointer
			z-index 100
			transition background 0.8s ease-out 0s;

			&:hover
				background: rgba(250, 250, 250, 0.8);
	 		
 		
	& > .slide
		position: absolute;
		padding-top 210px
		padding-left 20px
		padding-right 30px
		top: 0px;
		left: 0px;
		right: 0px;
		bottom: 0px;
		z-index: 1;
		visibility: hidden;
		opacity: 0;
		text-align left
		background url('../images/product2.jpg') no-repeat center 40px
		transition: opacity 0.8s ease-out 0.1s, visibility 0.1s ease-out 0.9s;
		
		& + label
			display: none
		& h4
			font 16px/24px 'AFuturica', Arial
			color #2b2a28

		& h5
			margin-top 5px
			font 14px/20px Tahoma, Arial, Verdana, Geneva CY, sans-serif
			color #72787a
		
		& ul.product__skils
			left -20
			text-align left
			
		ul.product__price 
			margin-top 25px
			li
				padding 0 5px

	.col-lg-12
		text-align center

		@media (max-width 482px)
			margin-bottom 20px
			
		a.content__view_ms
			text-decoration none
			display block
			//padding-right 50px
			font 20px/77px 'AFuturica', Arial
			color #01a0e4
			background-color #fff
			span
				margin-top 10px
				margin-left 15px