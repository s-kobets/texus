.content__top_ms
	display none
	padding 0 20px 29px 20px 
	background-color #fff
		
	&__day_ms		
		padding-left 20px
		
		&_mobile
			display none

			h2
				font 28px/48px 'AFuturica', Arial
				color #2b2a28			

			@media (max-width 479px)						
				display block	
		& h2
			font 28px/80px 'AFuturica', Arial
			color #2b2a28

		@media (max-width 479px)		
			display none

	&__filter_ms
		li
			float left
			margin-left 3%
			width 29% 
			text-align center

			@media (max-width 478px)		
				float none
				margin-left 0
				padding 5px 0
				width 100%

			&:last-child
				margin-right 3%

			& a
				display block
				margin-left 20px
				width 100%
				font 18px/48px Tahoma, Arial, Verdana, Geneva CY, sans-serif
				text-decoration none
				color #fff
				background-color #01a0e4
				border-radius 4px
				box-shadow 1px 1px 5px rgba(0,0,0,.3)
				
				@media (max-width 482px) and (min-width 322px)		
					margin-left 10px

				@media (max-width 321px)
